[pydocstyle]
# Use Google style docstrings
convention = google

# Ignore missing docstrings in some cases (__init__, magic methods, etc.)
add-ignore = D100,D104,D107
# D100: Missing docstring in public module
# D104: Missing docstring in public package
# D107: Missing docstring in __init__

# Match files that don't start with a test_ or _ prefix
match = ^(?!test_|_).*\.py$

# Include all .py files
match-dir = [^\.].*

# Don't check tests directory
ignore-decorators = pytest.fixture
